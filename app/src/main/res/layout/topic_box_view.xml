<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/topic_card"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:checkable="true"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <RelativeLayout
       android:foreground="?attr/selectableItemBackground"
       android:background="@android:color/white"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="8dp"
       android:layout_marginTop="2dp"
       android:layout_marginStart="2dp"
       android:layout_marginEnd="2dp">

       <TextView
           android:layout_marginStart="4dp"
           android:layout_marginEnd="4dp"
           android:id="@+id/title"
           android:textSize="16sp"
           android:text="Please stay away from me right now things are working good. Please stay away from me right now things are working good. "
           android:paddingTop="2dp"
           android:paddingBottom="2dp"
           android:fontFamily="@font/audiowide"
           android:textColor="@android:color/black"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>

       <com.mikhaellopez.circularimageview.CircularImageView
           app:civ_border_width="0dp"
           android:layout_below="@+id/title"
           android:layout_marginStart="8dp"
           android:id="@+id/author_img"
           android:layout_width="24dp"
           android:layout_height="24dp"/>

       <TextView
           android:id="@+id/author_name"
           android:layout_toEndOf="@+id/author_img"
           android:textSize="14sp"
           android:text="Pradyumn Kumar Upadhyay"
           android:layout_marginTop="2dp"
           android:paddingStart="4dp"
           android:layout_marginBottom="4dp"
           android:layout_below="@+id/title"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>


       <TextView
           android:textSize="12sp"
           android:text="12 / 09 / 2020 17:54 "
           android:id="@+id/question_time"
           android:paddingStart="12dp"
           android:paddingTop="4dp"
           android:layout_marginBottom="4dp"
           android:layout_below="@+id/author_img"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>

   </RelativeLayout>

</com.google.android.material.card.MaterialCardView>